<Window x:Class="PL_Transportation_System.AddLineStation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL_Transportation_System"
        mc:Ignorable="d"
        Title="AddLineStation" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Sources/line.jpg"/>
        </Grid.Background>
        <ComboBox ItemsSource="{Binding Stations}" Name="cbLineStations" HorizontalAlignment="Left" VerticalAlignment="Top" Width="402" Height="45" Margin="10,52,0,0" SelectionChanged="show_Line_stations_ComboBox_SelectionChanged">
            <ComboBox.Background>
                <ImageBrush/>
            </ComboBox.Background>
        </ComboBox>
        <Label Content="What is the index of the station on the route?" HorizontalAlignment="Left" Margin="449,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.302,-0.566" Width="333"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="541,52,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="167"/>
        <Label Content="Select the desired station" HorizontalAlignment="Left" Margin="130,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
