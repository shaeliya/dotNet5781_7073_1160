<Window x:Class="PL_Transportation_System.UpdateLineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL_Transportation_System"
        mc:Ignorable="d"
        Title="UpdateLineWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="lineTemplate">
            <Grid HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                    <Label>Name :</Label>
                    <Label Content="{Binding Name}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                    <Label>Time To Next Station :</Label>
                    <Label Content="{Binding TimeToNextStation}"/>
                </StackPanel>
                <StackPanel  Orientation="Horizontal" Grid.Row="0" Grid.Column="2">
                    <Label>Distance To Next Station :</Label>
                    <Label Content="{Binding DistanceToNextStation}"/>
                </StackPanel>
                <Button Grid.Column="3"  Width="80" Margin="0,0,20,0"  Background="White" Opacity="0.7" FontFamily="Goudy Old Style" FontSize="15px" Foreground="#FF042271" FontWeight="Bold"  HorizontalAlignment="Right">Update</Button>
                <Button Grid.Column="4" Width="80" Background="White" Opacity="0.7" FontFamily="Goudy Old Style" FontSize="15px" Foreground="#FF042271" FontWeight="Bold"  HorizontalAlignment="Right">Delete</Button>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Sources/line.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Add line station" Background="White" Opacity="0.7" FontFamily="Goudy Old Style" FontSize="15px" Foreground="#FF042271" FontWeight="Bold"  DataContext="{Binding}" HorizontalAlignment="Left" Margin="139,351,0,0" VerticalAlignment="Top" Width="166" Click="Add_Line_Station_Button_Click" Grid.Column="1" Height="49"/>
        <Button Content="Change bus details" Foreground="#FF042271" FontWeight="Bold"  Background="White" Opacity="0.7" FontFamily="Goudy Old Style" FontSize="15px" HorizontalAlignment="Left" Margin="426,351,0,0" VerticalAlignment="Top" Width="156" Grid.Column="1" Height="49"/>
        <ListView  x:Name="lvudateLine" HorizontalContentAlignment="Stretch" Foreground="#FF042271" FontWeight="Bold"  FontSize="15px" Background="White" Opacity="0.8"  FontFamily="Goudy Old Style" ItemTemplate="{StaticResource  lineTemplate}"  ItemsSource="{Binding}" HorizontalAlignment="Left" Height="321" Margin="42,10,0,0" VerticalAlignment="Top" Width="718" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
