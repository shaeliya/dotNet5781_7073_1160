<Window x:Class="PL_Transportation_System.UpdateLineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL_Transportation_System"
        mc:Ignorable="d"
        Title="UpdateLineWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="lineTemplate">
            <Grid HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                    <Label>Name :</Label>
                    <Label Content="{Binding Name}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                    <Label>Time To Next Station :</Label>
                    <Label Content="{Binding TimeToNextStation}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2">
                    <Label>Distance To Next Station :</Label>
                    <Label Content="{Binding DistanceToNextStation}"/>
                </StackPanel>
                <Button Grid.Column="3" HorizontalAlignment="Right">Update</Button>
                <Button Grid.Column="4" HorizontalAlignment="Right">Delete</Button>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Button Content="Add line station" DataContext="{Binding}" HorizontalAlignment="Left" Margin="183,359,0,0" VerticalAlignment="Top" Width="153" Click="Add_Line_Station_Button_Click"/>
        <Button Content="Change bus details" HorizontalAlignment="Left" Margin="463,359,0,0" VerticalAlignment="Top" Width="156"/>
        <ListView  x:Name="lvudateLine" ItemTemplate="{StaticResource  lineTemplate}"  ItemsSource="{Binding}" HorizontalAlignment="Left" Height="354" Margin="10,0,0,0" VerticalAlignment="Top" Width="774">

        </ListView>

    </Grid>
</Window>
