<Window x:Class="PL_Transportation_System.StationDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL_Transportation_System"
        mc:Ignorable="d"
        Title="Update station" Height="450" Width="800" Icon="Sources/carMain.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="730*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Sources/station.jpg"/>
        </Grid.Background>
        <ListBox x:Name="lvUpdateStation" Background="White" Opacity="0.7" FontFamily="Goudy Old Style" FontSize="15px" Foreground="#FF042271" FontWeight="Bold" HorizontalAlignment="Left" Height="268" Margin="50,29,0,0" VerticalAlignment="Top" Width="685" Grid.ColumnSpan="2">

        </ListBox>
        <Button   FontSize="15px"   Click="ChangeAddressStation" Content="Change address station" Margin="390.8,346,58.6,10" Grid.Column="1"/>
        <Button FontSize="15px"  Click="ChangeNameStation" Content="Change name station" Margin="50,346,462.6,10" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
