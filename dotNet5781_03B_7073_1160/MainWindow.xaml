<Window x:Class="dotNet5781_03B_7073_1160.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03B_7073_1160"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="ListBoxItemTemplate">
            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                <Button Content="Travel" Margin="0,0,20,0" Width="80" Click="Open_Travel_Window_Button_Click"/>
                <Button Content="Fuel" Margin="0,0,20,0" Width="80" Click="FuelBus_Click"/>
                <StackPanel Orientation="Horizontal">
                        
                    <Label Content="LicenseNumber:"></Label>
                    <Label Content="{Binding LicenseNumber}"  />
                    
                    <Label Content=", Kilometrage:"/>
                    <Label Content="{Binding Kilometrage}" />
                    
                    <Label Content=", BusStartDate:"></Label>
                    <Label Content="{Binding BusStartDate}"  />
                    
                    <Label Content=", Fuel:"></Label>
                    <Label Content="{Binding Fuel}"  />
                    
                    <Label Content=", Treatment:"></Label>
                    <Label Content="{Binding Treatment}"  />

                    <Label Content=", Status:"></Label>
                    <Label Content="{Binding Status}"  />
                </StackPanel>
                
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <StackPanel Orientation="Vertical">
        <ListView SelectionMode="Extended"  Name="lbBus" ItemsSource="{Binding BusList ,UpdateSourceTrigger=Explicit}" HorizontalAlignment="Stretch" Height="100" VerticalAlignment="Top" Margin="10,0,0,0" ItemTemplate="{StaticResource ListBoxItemTemplate}" MouseDoubleClick="Open_ShowBusDetails_DoubleClick"/>
        <Button Content="add bus" Click="Open_Add_Bus_Window_Button_Click" Margin="642,0,-0.4,0" />
    </StackPanel>




</Window>
